{
  "name": "local-business-netlify-templates",
  "version": "1.0.0",
  "description": "Reusable website templates for local business web design services",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "netlify deploy --prod --dir=dist",
    "deploy:draft": "netlify deploy --dir=dist",
    "setup:client": "node scripts/setup-client.js",
    "build:client": "npm run build && echo 'Client site ready for deployment'",
    "client:list": "node scripts/deploy-client.js list",
    "client:deploy": "node scripts/deploy-client.js deploy",
    "client:deploy:separate": "node scripts/deploy-client.js deploy $npm_config_client separate",
    "client:deploy:branch": "node scripts/deploy-client.js deploy $npm_config_client branch"
  },
  "keywords": [
    "netlify",
    "templates",
    "web-design",
    "local-business",
    "small-business"
  ],
  "author": "Your Web Design Business",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "@netlify/plugin-nextjs": "^4.29.0",
    "netlify-cli": "^17.0.0"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "swiper": "^11.0.0"
  }
}